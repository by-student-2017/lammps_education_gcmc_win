#!/usr/bin/gnuplot

set terminal win font "Arial,12"
set xlabel "Step"
set mxtics 5
set ylabel "Energy / eV"
set mytics 5
set y2label "Pressure / MPa, Temperature / K"
set y2tics
set my2tics 5
plot "out_energy.txt" u 1:2 w l t "Energy", "out_energy.txt" u 1:($4*0.1) w l t "Pressure (MPa)" axis x1y2, "out_energy.txt" u 1:3 w l t "Temperature (K)" axis x1y2

