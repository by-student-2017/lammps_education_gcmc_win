#!/usr/bin/gnuplot

set terminal win font "Arial,12"
set xlabel "Step"
set mxtics 5
set ylabel "Number of Gas / unitcell, Pressure / MPa, Temperature / K"
set mytics 5
set y2label "Number of Gas / unitcell, Pressure / MPa, Temperature / K"
set y2tics
set my2tics 5
plot "rho_vs_p.dat" u 1:5 w l t "He", "rho_vs_p.dat" u 1:($3*0.1) w l t "Pressure (MPa)", "rho_vs_p.dat" u 1:8 w l t "Temperature (K)"

# pause -1

